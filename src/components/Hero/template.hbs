<style>
  @import url('./main.css');
  .banner-wrapper {
    padding: 8rem 2rem 2rem 2rem;
    min-height: 600px;
    background-image: url({{props.image}});
    background-position:  center;
    background-size: cover;
    background-repeat: no-repeat;
    position: relative;
  }
  .banner-wrapper::before {
    position: absolute;
    z-index: -1;
    background-color: rgba(0,0,0,.6);
    content: '';
    display: block;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
  .banner-heading {
    color:var(--c-primary);
  }
  .banner-description {
    color: #f2f2f2;
  }
</style>
<section class="banner-wrapper">
  <div class="banner">
    <h2 class="banner-heading">{{props.heading}}</h2>
    <h3 class="banner-description">{{props.description}}</h3>
  </div>
</section>
